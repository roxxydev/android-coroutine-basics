<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment"
    android:id="@+id/parentLayout">

    <Button
        android:id="@+id/view_basic_coroutine_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Basic Coroutine"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/view_completable_job_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Job Coroutine"
        app:layout_constraintTop_toBottomOf="@+id/view_basic_coroutine_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/view_parallel_task_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Parallel Tasks"
        app:layout_constraintTop_toBottomOf="@+id/view_completable_job_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/view_handling_exception_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Handling Exception"
        app:layout_constraintTop_toBottomOf="@+id/view_parallel_task_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>